<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <div class="container-fluid">
    <%= link_to root_path, class: "navbar-brand" do %>
      <%= image_tag 'pointer_transparent.png', alt: 'pointer transparent' %>
    <% end %>
    <%= link_to "Restroomie", '/restrooms', class: "navbar-brand custom-font custom-link" %>
     <%#= link_to "Restroomie", '/restrooms', class: "navbar-brand border border-dark p-2 rounded-pill ms-3" %>
    <button class="navbar-toggler border-0" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
